<?xml version="1.0" encoding="UTF-8"?>

<Body> 
	<Title>广东化州发生水污染事故</Title>  
	<ReportTime type="absTime">2011年06月21日</ReportTime>  
	<Content> 
		<Paragraph> 
			<Sentence> 
				<Event type="thoughtevent" eid="e1"> 
					<Time type="absTime" tid="t1">2011年6月20日</Time>从 
					<Participant oid="o1">广东省环保厅</Participant>  
					<Denoter type="statement" did="d1">获悉</Denoter>，
				</Event>  
				<Event eid="e2"> 
					<Participant sid="s2">广东省化州市新安镇龙潭村委会狮子岭的化州市德英高岭土厂</Participant>  
					<Time type="timeInterval" tid="t2">长期</Time>违法 
					<Denoter type="movement" did="d2">偷排</Denoter>未经处理 
					<Object oid="o2">含酸性废水</Object>，
				</Event>  
				<Event eid="e3"> 
					<Denoter type="stateChange" did="d3">致使</Denoter>  
					<Location type="destination" lid="l3">当地龙窝河及李苗库湾</Location>  
					<Object oid="o3">水体污染</Object>。
				</Event> 
			</Sentence>  
			<Sentence> 
				<Event eid="e4"> 
					<Time type="timeInterval" tid="t4">目前</Time>， 
					<Participant sid="s4,s5,s6">环保部门</Participant>已经 
					<Denoter type="movement" did="d5">抵达</Denoter>  
					<Location type="destination" lid="l4">现场</Location> 
				</Event>  
				<Event eid="e5">进行 
					<Denoter type="stateChange" did="d5">处置</Denoter>。
				</Event>  
				<Event eid="e6">监测 
					<Object oid="o6">数据</Object>  
					<Denoter type="statement" did="d6">显示</Denoter>，
				</Event>  
				<Event eid="e7"> 
					<Time type="timeInterval" tid="t7">截至２０日晚间</Time>， 
					<Location lid="l7">龙窝河及李苗库湾</Location>  
					<Object sid="s7">水质酸碱值</Object>已经 
					<Denoter type="movement" did="d7">上升</Denoter>并达标，
				</Event>  
				<Event eid="e8">其下游饮用水水源地 
					<Location lid="l8">鹤地水库</Location>  
					<Object oid="o8,s9">水质</Object>无 
					<Denoter type="stateChange" did="d8">异常</Denoter>，
				</Event>  
				<Event eid="e9">各监测断面水质 
					<Denoter type="movement" did="d9">达到或优于</Denoter>  
					<Object oid="o9">地表水Ⅲ类标准</Object>。
				</Event> 
			</Sentence> 
		</Paragraph> 
	</Content>  
	<eRelation relType="Thoughtcontent" thoughtevent_eid="e1" thoughtcontent_eids="e2-e9"/>  
