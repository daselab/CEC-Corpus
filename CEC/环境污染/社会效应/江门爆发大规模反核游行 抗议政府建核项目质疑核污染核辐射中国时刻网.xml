					<Denoter did="d6" type="operation">公示</Denoter> 
				</Event>， 
				<Event eid="e7"> 
					<Denoter did="d7">引起</Denoter>大量 
					<Object oid="o7">反对声音</Object> 
				</Event>， 
				<Event type="thoughtevent" eid="e8"> 
					<Participant sid="s8">民众</Participant>  
					<Denoter did="d8" type="statement">质疑</Denoter> 
				</Event>  
